<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context="cc.easyandroid.pulltorefresh.simple.MainActivity">

    <in.srain.cube.views.ptr.loadmore.LoadMorePtrFrameLayout
        xmlns:cube_ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/store_house_ptr_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        cube_ptr:ptr_duration_to_close="300"
        cube_ptr:ptr_duration_to_close_header="2000"
        cube_ptr:ptr_keep_header_when_refresh="true"
        cube_ptr:ptr_pull_to_fresh="false"
        cube_ptr:ptr_ratio_of_header_height_to_refresh="1.2"
        cube_ptr:ptr_resistance="1.7">


        <in.srain.cube.views.ptr.loadmore.ListViewHandler
            android:background="@android:color/white"
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:divider="@drawable/abc_list_pressed_holo_dark"
            android:dividerHeight="2dp"
            android:layout_height="match_parent" />
    </in.srain.cube.views.ptr.loadmore.LoadMorePtrFrameLayout>

</RelativeLayout>
